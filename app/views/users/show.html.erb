<body>
  <div class="container"> <!-- container で全体を囲む -->
    <h1>Filtering Twitter</h1>
    <div class="row"> <!-- row で列を作る -->

      <%# left %>
      <div class="col-md-7">
        <div class="container">
          <div class="row">
            <img src="http://www.paper-glasses.com/api/twipi/<%= @user[:username]%>" alt="icon" class="img-thumbnail" >
            <h3>@<%= @user[:username] %></h3>
            <div class="col-md-1">
            </div>

            <div class="col-md-6">
              <hr>
              <% @user[:tweet].each do |tweet| %>
                <p><%= tweet.to_s %></p>
                <hr>
              <% end %>
              ツイートを表示
            </div>
          </div>
        </div>
      </div>

      <%# right %>
      <div class="col-md-4">
        <h3>フィルタリング文字列</h3>
      </div>

      <div class="col-md-1">
      </div>

    </div>
  </div>
</body>


